<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CRUDSCHOOL.Views.MainPage"
     >

    <ContentPage.Content>

      <StackLayout Orientation="Vertical" Padding="20">

       <StackLayout Margin="20,0,20,20">
           <Label Text="Registro de colegios en Lima" FontSize="Title"  FontAttributes="Italic"/>
       </StackLayout>


       <StackLayout Margin="20,0,20,20">
           <Button x:Name="Item1" Text="Registrar" />
       </StackLayout>

       <StackLayout Margin="20,0,20,20">
           <Button x:Name="Item2" Text="Ver colegios" />
       </StackLayout>
       
    </StackLayout>


    </ContentPage.Content>
</ContentPage>

